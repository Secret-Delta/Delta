<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rich_black"
    tools:context=".Activities.SignUp">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/sign_upNSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/rectangleup"
                android:layout_width="match_parent"
                android:layout_height="772dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/signcontainer" />

            <RelativeLayout
                android:id="@+id/group_49_ek1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="45dp">

                <TextView
                    android:id="@+id/welcome_ek1"
                    android:layout_width="182.74dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/txtWelcome"
                    android:textColor="@color/white"
                    android:textSize="16sp" />


            </RelativeLayout>

            <TextView
                android:id="@+id/sign_up_ek3"
                android:layout_width="200.52dp"
                android:layout_height="90.51dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="80dp"
                android:text="@string/sign_up"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="40sp" />


            <RelativeLayout
                android:id="@+id/group_56_ek1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="75dp"
                android:layout_marginTop="670dp">


                <Button
                    android:id="@+id/btnSignup"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/candy_pink"
                    android:text="@string/sign_up"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/group_60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="58dp"
                android:layout_marginTop="100dp">


                <RelativeLayout
                    android:id="@+id/group_54_ek1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="90dp">

                    <TextView
                        android:id="@+id/enter_your_username_or_email_address_ek1"
                        android:layout_width="287dp"
                        android:layout_height="31dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="-2.08dp"
                        android:text="Enter your eMail address"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/editEmailAddress"
                        android:layout_width="284.82dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/text_fields_cal"
                        android:hint="@string/example_email"
                        android:inputType="textEmailAddress"
                        android:paddingStart="10dp"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/group_55_ek1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="275dp">

                    <TextView
                        android:id="@+id/enter_your_password_ek1"
                        android:layout_width="183dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="2.08dp"
                        android:text="Enter your Password"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/password_ek1"
                        android:layout_width="284.82dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/text_fields_cal"
                        android:hint="Enter Password"
                        android:inputType="textPassword"
                        android:paddingStart="10dp"
                        android:textColor="@color/black"
                        android:textSize="14sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/groupcpw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="370dp"/>

                <RelativeLayout
                    android:id="@+id/groupcb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="450dp"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"
                        android:text="@string/agree_to_terms_and_conditions"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/loginRedirect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/checkBox"
                        android:layout_marginStart="70dp"
                        android:text="@string/have_an_acoount"
                        android:textColor="@color/metallic_seaweed"
                        android:textSize="14sp" />


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/group_59"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="180dp">


                    <RelativeLayout
                        android:id="@+id/group_57"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp">

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="154.45dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="6dp"
                            android:text="@string/your_name"
                            android:textColor="@color/white"
                            android:textSize="16sp" />


                        <EditText
                            android:id="@+id/editName"
                            android:layout_width="284.82dp"
                            android:layout_height="50dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/text_fields_cal"
                            android:ems="10"
                            android:hint="@string/enter_name"
                            android:inputType="textPersonName"
                            android:paddingStart="5dp"
                            android:textSize="13sp" />


                    </RelativeLayout>

                </RelativeLayout>


            </RelativeLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
