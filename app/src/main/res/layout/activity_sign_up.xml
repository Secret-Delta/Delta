<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlue"
    tools:context=".Activities.SignUp">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/rectangle_13_ek1"
                android:layout_width="match_parent"
                android:layout_height="772dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/signcontainer" />

            <RelativeLayout
                android:id="@+id/group_49_ek1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="45dp">

                <TextView
                    android:id="@+id/welcome_ek1"
                    android:layout_width="182.74dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/txtWelcome"
                    android:textColor="@color/White"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/have_an_account___sign_in"
                    android:layout_width="97.3dp"
                    android:layout_height="72.01dp"
                    android:layout_marginLeft="216dp"
                    android:layout_marginTop="0dp"
                    android:text="@string/have_an_acoount"
                    android:textColor="@color/lightBlue"
                    android:textSize="13sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/sign_up_ek3"
                android:layout_width="200.52dp"
                android:layout_height="90.51dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="80dp"
                android:text="@string/sign_up"
                android:textColor="@color/White"
                android:textSize="40sp" />

            <RelativeLayout
                android:id="@+id/group_56_ek1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="75dp"
                android:layout_marginTop="600dp">


                <Button
                    android:id="@+id/btnSignup"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:text="@string/sign_up"
                    android:textColor="@color/White"
                    android:onClick="openLogin"
                    android:textSize="16sp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/group_60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="58dp"
                android:layout_marginTop="190dp">


                <RelativeLayout
                    android:id="@+id/group_54_ek1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp">

                    <TextView
                        android:id="@+id/enter_your_username_or_email_address_ek1"
                        android:layout_width="287dp"
                        android:layout_height="31dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="-2.08dp"
                        android:text="Enter your eMail address"
                        android:textColor="@color/White"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/rectangle_17_ek2"
                        android:layout_width="284.82dp"
                        android:layout_height="61.38dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="36.46dp"
                        android:background="@drawable/text_fields_cal" />

                    <EditText
                        android:id="@+id/username_or_email_address_ek1"
                        android:layout_width="212dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="15.68dp"
                        android:layout_marginTop="50dp"
                        android:background="@null"
                        android:hint="@string/example_email"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/group_55_ek1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="258dp">

                    <TextView
                        android:id="@+id/enter_your_password_ek1"
                        android:layout_width="183dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="-2.08dp"
                        android:text="Enter your Password"
                        android:textColor="@color/White"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/rectangle_17_ek3"
                        android:layout_width="284.82dp"
                        android:layout_height="61.38dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="36.46dp"
                        android:background="@drawable/text_fields_cal" />

                    <EditText
                        android:id="@+id/password_ek1"
                        android:layout_width="208.38dp"
                        android:layout_height="29.79dp"
                        android:layout_marginLeft="15.68dp"
                        android:layout_marginTop="56.26dp"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textSize="14sp" />


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/group_59"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="132dp">


                    <RelativeLayout
                        android:id="@+id/group_57"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp">

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="154.45dp"
                            android:layout_height="31dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="0dp"
                            android:text="@string/your_name"
                            android:textColor="@color/White"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/rectangle_19"
                            android:layout_width="137.45dp"
                            android:layout_height="61.38dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="30.21dp"
                            android:background="@drawable/text_fields_cal"
                            android:textSize="14sp" />


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/group_58"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="147dp"
                        android:layout_marginTop="0dp">

                        <TextView
                            android:id="@+id/contact_number"
                            android:layout_width="153.95dp"
                            android:layout_height="29.5dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="0dp"
                            android:text="Contact Number"
                            android:textColor="@color/White"
                            android:textSize="13sp" />

                        <EditText
                            android:id="@+id/rectangle_19_ek1"
                            android:layout_width="137.45dp"
                            android:layout_height="61.38dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="30.21dp"
                            android:background="@drawable/text_fields_cal"
                            android:textSize="14sp" />
                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
