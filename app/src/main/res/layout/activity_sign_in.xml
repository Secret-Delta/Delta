<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rich_black"
    tools:context=".Activities.SignIn">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/sign_inNSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:id="@+id/group_49"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="75dp">

                    <TextView
                        android:id="@+id/welcome"
                        android:layout_width="188.91dp"
                        android:layout_height="35.97dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:text="@string/txtWelcome"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/sign_up_redirect"
                        android:layout_width="114.45dp"
                        android:layout_height="51.12dp"
                        android:layout_marginLeft="188dp"
                        android:layout_marginTop="3dp"
                        android:text="@string/no_account_sign_up"
                        android:textColor="@color/metallic_seaweed"
                        android:textSize="13sp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/sign_in_ek3"
                    android:layout_width="189.97dp"
                    android:layout_height="90.43dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="110dp"
                    android:text="@string/sign_in"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="200dp"
                    android:backgroundTint="@color/oxford_blue"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/group_54"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/sign_in_ek3"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/enter_email_address"
                                android:layout_width="287dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0dp"
                                android:layout_marginTop="-2.08dp"
                                android:text="Enter your eMail address"
                                android:textColor="@color/white"
                                android:textSize="16sp" />


                            <EditText
                                android:id="@+id/email_address"
                                android:layout_width="286.49dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="40dp"
                                android:background="@drawable/text_fields_cal"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/group_55"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/group_54"
                            android:layout_marginTop="40dp">

                            <TextView
                                android:id="@+id/enter_your_password"
                                android:layout_width="160dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0dp"
                                android:layout_marginTop="2.08dp"
                                android:text="Enter your Password"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <EditText
                                android:id="@+id/login_password"
                                android:layout_width="286.49dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="40dp"
                                android:background="@drawable/text_fields_cal"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/forgot_password"
                            android:layout_width="wrap_content"
                            android:layout_height="25.19dp"
                            android:layout_below="@+id/group_55"
                            android:layout_marginTop="20dp"
                            android:text="@string/forgot_password"
                            android:textColor="@color/metallic_seaweed"
                            android:textSize="14sp" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:id="@+id/btnLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="75dp"
                    android:layout_marginTop="600dp">

                    <Button
                        android:id="@+id/btnSignup"
                        android:layout_width="250dp"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/candy_pink"
                        android:text="@string/sign_in"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
